int led = 11; // on introduit les variables
int pot = 0; // introduit la variable qui va receuillir la valeur du potentiomètre
int Val_led = 0; // introduit la variable qui permettra d'envoyer le bon rapport cyclique à la LED
int lum = 0;
int phot = 0; // introduit la variable qui va receuillir la valeur de la photorésistance

void setup() {
  // put your setup code here, to run once:
  pinMode (led, OUTPUT); // on déclare la LED en sortie
  Serial.begin(9600);
}
// On créé une boucle
void loop() { 
  pot = analogRead(A0); // on lit la valeur A0
  phot = analogRead(A1); // on lit la valeur analogique de la photorésistance sur A1
  Serial.println(phot); // on affiche dans le moniteur
  lum = pot/4; // on met le potentiomètre à l'échelle de la LED
  analogWrite(led , lum); // on lit sa valeur
}
